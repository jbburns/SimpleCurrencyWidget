<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="#022b49">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/rateDisplayText"
        android:textColor="@android:color/white"
        android:id="@+id/rateDisplayTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/baseCounterCurrencyText"
        android:textColor="@android:color/white"
        android:id="@+id/baseCounterCurrencyTextView"
        android:layout_above="@+id/rateDisplayTextView"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/widget_margin"
        android:singleLine="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baseCurrencyImageView"
        android:layout_alignBottom="@+id/baseCounterCurrencyTextView"
        android:layout_toLeftOf="@+id/baseCounterCurrencyTextView"
        android:layout_toStartOf="@+id/baseCounterCurrencyTextView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counterCurrencyImageView"
        android:layout_below="@+id/baseCurrencyImageView"
        android:layout_toRightOf="@+id/baseCounterCurrencyTextView"
        android:layout_toEndOf="@+id/baseCounterCurrencyTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateAsOfTimeTextView"
        android:layout_below="@+id/rateDisplayTextView"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/rateAsOfTimeText"
        android:singleLine="true"
        android:textSize="8sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widgetRefreshTimeText"
        android:textColor="@android:color/white"
        android:id="@+id/widgetRefreshTimeTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textSize="10sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refreshButton"
        android:clickable="true"
        android:textColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>